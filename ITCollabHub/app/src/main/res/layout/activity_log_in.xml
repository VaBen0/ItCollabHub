<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".log_in">


    <TextView
        android:id="@+id/collaborotory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITCollabHub"
        android:textSize="50dp"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/con"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/mailu"
            android:layout_width="232dp"
            android:layout_height="58dp"
            android:hint="Почта" />

        <EditText
            android:id="@+id/passu"
            android:layout_width="232dp"
            android:layout_height="58dp"
            android:hint="Пароль" />

        <TextView
            android:id="@+id/forgotBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:clickable="true"
            android:text="Забыли пароль?"
            android:textColor="#1f57db"
            app:layout_constraintBottom_toTopOf="@+id/enterBut"
            app:layout_constraintLeft_toRightOf="@+id/enter"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/enter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="107dp"
        android:layout_marginBottom="5dp"
        android:text="Нет аккаунта?"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/enterBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/regBut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:text="Создайте новый"
        android:textColor="#1f57db"
        app:layout_constraintBottom_toTopOf="@+id/enterBut"
        app:layout_constraintLeft_toRightOf="@+id/enter"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/enterBut"
        android:layout_width="316dp"
        android:layout_height="62dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="#00C6A2"
        android:text="Войти в аккаунт"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/ver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="1.0.0"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/enterBut"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>